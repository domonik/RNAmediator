    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File internal",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "-s","testgenes.fa.gz",
                "-w","60",
                "-l","60",
                "-u","5",
                "-o","test_random",
                "-x","random,5",
                "-y","3",
                "-z","1",
                "-g","testgenes.bed.gz",
                "-r","raw",
                "-n","unpaired",
                "-p","paired",
                "--save","1",
                "--loglevel","DEBUG"
            ]
        },
        {
            "name": "Rissmed single",
            "type": "python",
            "cwd": "~/Work/Tests/RIssmed",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
              }
        },
        {
            "name": "Rissmed sliding",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "-s test.fa",
                "-x sliding",
                "-y 10"
            ],
            "cwd": "~/Work/Tests/RIssmed"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": ["debug-test"], 
            "redirectOutput": true,
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        }
    ]
}